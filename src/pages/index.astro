---
import CVIcon from "../components/icons/CVIcon.astro";
import Email from "../components/icons/Email.astro";
import Github from "../components/icons/Github.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import Layout from "../layouts/Layout.astro";
const contacts = [
  { icon: Email, title: "Contáctame", link: "#" },
  { icon: Github, title: "Github", link: "#" },
  { icon: Linkedin, title: "LinkedIn", link: "#" },
  { icon: CVIcon, title: "Curriculum VITAE", link: "#" },
