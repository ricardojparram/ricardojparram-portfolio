---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="min-h-screen relative bg-[#0d1521] text-gray-200 flex flex-col items-center"
  >
    <div
      class="absolute top-0 -z-10 h-[25vh] w-full bg-gradient-to-b from-[#202d47b5] via-transparent to-transparent backdrop-blur-lg [-webkit-mask-image:linear-gradient(to_bottom,black,transparent)]"
    >
    </div>
    <Header />
    <div class="max-w-[800px]">
      <slot />
      <Footer />
    </div>
    <div
      class="absolute bottom-0 -z-10 h-[20vh] w-full bg-gradient-to-t from-[#202d47b5] via-transparent to-transparent backdrop-blur-xl [-webkit-mask-image:linear-gradient(to_bottom,transparent,black)]"
    >
    </div>
  </body>
</html>
