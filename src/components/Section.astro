---
interface Props {
  id: string;
  title?: string;
  class?: string;
  "max-w"?: string;
}
const { id, title, class: className, "max-w": maxWidth } = Astro.props;
---

<section
  class:list={[
    "relative flex flex-col items-center gap-y-8 text-xl pt-8",
    className,
  ]}
  id={id}
>
  {
    title && (
      <div class="w-full sticky top-0 z-20">
        <div class="relative w-full">
          {[0, 1].map(() => (
            <div class="absolute inset-0 w-full h-full mask-to-t backdrop-blur-md" />
          ))}
          <h2 class="w-full text-3xl md:text-4xl font-bold flex gap-3 justify-center py-4 pb-8">
            <span class="z-20 text-color">{title}</span>
          </h2>
        </div>
      </div>
    )
  }
  <div class:list={[maxWidth ?? "max-w-[900px]", "w-full px-6 md:px-0"]}>
    <slot />
  </div>
</section>
