---
interface Props {
  id: string;
  title?: string;
  class?: string;
}
const { id, title, class: className } = Astro.props;
---

<section
  class:list={[
    "relative flex flex-col items-center gap-y-8 text-xl pt-8",
    className,
  ]}
  id={id}
>
  {
    title && (
      <div class="w-full sticky top-0 z-50">
        <div class="relative w-full">
          {[0, 1].map(() => (
            <div class="absolute inset-0 w-full h-full mask-to-t backdrop-blur-md" />
          ))}
          <h2 class="w-full text-4xl font-bold flex gap-3 justify-center py-4 pb-8">
            <span class="z-50 text-slate-700 dark:text-slate-200">{title}</span>
          </h2>
        </div>
      </div>
    )
  }
  <div class="max-w-[900px] px-6 md:px-0">
    <slot />
  </div>
</section>
