---
import AstroIcon from "./icons/Astro.astro";
import PHP from "./icons/PHP.astro";
import React from "./icons/React.astro";
import Tailwind from "./icons/Tailwind.astro";
import MySQL from "./icons/MySQL.astro";
import Bootstrap from "./icons/Bootstrap.astro";
const options = {
  Tailwind: {
    icon: Tailwind,
  },
  Astro: {
    icon: AstroIcon,
  },
  PHP: {
    icon: PHP,
  },
  React: {
    icon: React,
  },
  Mysql: {
    icon: MySQL,
  },
  Bootstrap: {
    icon: Bootstrap,
  },
};
interface Props {
  icons: Array<string>;
  class: string;
  type?: string;
}
const { icons, class: className, type } = Astro.props;
---

{
  icons.map((icon) => {
    const Component = options[icon].icon;
    return type === "badge" ? (
      <div class="border border-text bg-bg text-text px-2 py-1 flex gap-2 items-center justify-center text-base font-bold rounded-md">
        <p>{icon}</p>
        <Component class={className} title={icon} class="fill-text" />
      </div>
    ) : (
      <Component class={className} title={icon} />
    );
  })
}
