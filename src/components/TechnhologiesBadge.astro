---
import type { TechnologiesType } from "../lib/technologies";
import { Technologies } from "../lib/technologies";
type type = "badge" | "icon" | undefined;
interface Props {
  icons: TechnologiesType[];
  class: string;
  type?: type;
}
const { icons, class: className, type } = Astro.props;
---

{
  icons.map((icon) => {
    const Component = Technologies[icon];
    return type === "badge" ? (
      <div
        class:list={[
          "border border-text bg-bg rounded-xl",
          "text-text text-xs font-bold",
          "py-1 px-3 flex gap-2 items-center justify-center ",
        ]}
      >
        <p>{icon}</p>
        <Component class={className} title={icon} class="fill-text" />
      </div>
    ) : (
      <Component class={className} title={icon} />
    );
  })
}
