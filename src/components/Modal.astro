---
import Close from "./icons/Close.astro";
const { id } = Astro.props;
---

<style>
  dialog {
    position: fixed;
    transform: translate(-50%, -50%);
    &::backdrop {
      overflow: hidden;
      position: fixed;
      top: 0px;
      right: 0px;
      bottom: 0px;
      left: 0px;
    }
  }
</style>

<dialog
  id={id}
  class:list={[
    "relative",
    "w-[90vw] max-w-[700px] p-4 pt-0",
    "left-[47%] top-[50%] md:left-[50%]",
    "text-text bg-bg/90 rounded-lg shadow-2xl backdrop:bg-slate-600/30 backdrop:backdrop-blur-lg dark:backdrop:bg-slate-900/30 ",
    "border-none ring-0 focus:ring-0 focus-visible:ring-0 outline-none",
  ]}
>
  <div class="relative w-full p-4 pt-6 flex justify-between">
    <h3 class="text-xl font-bold">Detalle del proyecto</h3>
    <button
      type="button"
      class="border-none outline-none cursor-pointer"
      onclick={`document.querySelector('#${id}').close()`}
    >
      <Close class="w-8 h-8" />
    </button>
  </div>
  <slot />
</dialog>
