---
import Close from "./icons/Close.astro";
const { id, title } = Astro.props;
---

<div
  id={id}
  class:list={[
    "hidden w-full h-full ",
    "fixed z-30 inset-0 overflow-hidden",
    "flex justify-center items-center",
    "duration-300",
    "backdrop-blur-xl p-4",
  ]}
  data-lenis-prevent
>
  <div
    class="relative bg-bg/90 shadow rounded-lg overflow-hidden max-w-[600px] z-50"
  >
    <!-- Modal header -->
    <div class="flex bg-bg/40 items-center justify-between p-4 md:p-5 shadow">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-semibold leading-7">
          {title}
        </h3>
      </div>
      <button
        type="button"
        class:list={[
          "rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center",
          "text-text bg-transparent hover:bg-text hover:text-bg",
        ]}
        onclick={`document.querySelector('#${id}').classList.add('hidden')`}
      >
        <Close class="w-8 h-8" />
      </button>
    </div>
    <div class="p-4 md:p-6 text-text max-h-[90vh] overflow-y-auto">
      <slot />
    </div>
  </div>
  <div
    class="absolute inset-0 z-40"
    onclick={`document.querySelector('#${id}').classList.add('hidden')`}
  >
  </div>
</div>
