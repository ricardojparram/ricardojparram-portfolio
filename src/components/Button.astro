---
interface Props {
  link?: string;
  class?: string;
  id?: string;
  title?: string;
}
const { title, id, link, class: className } = Astro.props;
---

{
  link ? (
    <a
      id={id}
      href={link}
      title={title}
      target="_blank"
      class="flex group w-fit bg-bg text-text font-bold transition-all duration-200 hover:scale-105 rounded-lg border border-slate-600 dark:border-slate-300 hover:bg-slate-300 dark:hover:bg-slate-800 p-1"
    >
      <span
        class={`${className ? className : ""} flex gap-2 items-center w-fit h-full px-2`}
      >
        <slot />
      </span>
    </a>
  ) : (
    <button
      id={id}
      title={title}
      class="flex group w-fit bg-bg text-text backdrop-blur-sm font-bold transition-all duration-200 hover:scale-105 rounded-lg border  border-slate-600 dark:border-slate-300 hover:bg-slate-300 dark:hover:bg-slate-800 p-1"
    >
      <span
        class={`${className ? className : ""} flex gap-2 items-center w-fit h-full px-2`}
      >
        <slot />
      </span>
    </button>
  )
}
